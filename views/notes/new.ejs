<%- include("../partials/header") %>
<div style="display: flex; flex-direction: column; height: 100%; background-color: darkgoldenrod;">
  <h1>New Note</h1>
  <form action="/notes" method="POST" style="margin: 10px; padding: 10px; min-width: 45%; border: solid 10px black; background-color: darkolivegreen">
    <div>
      <label for="title">Title</label>
      <input type="text" name="title" placeholder="Note Title:">
    </div>
    <div>
      <label for="content">Content</label>
      <textarea name="content" id="note-body" cols="30" rows="10" placeholder="Write your note here"></textarea>
    </div>
    <input type="submit" value="Post Note" style="background-color: #83995a; width: 100px; height: 30px; border-radius: 5px;">
  </form>
</div>
<%- include("../partials/footer") %>