<%- include("../partials/header") %>
<div style="display: flex; flex-direction: column; height: 100%; background-color: darkgoldenrod; padding: 20px;">
  <h1 style="margin-left: 20px;">Notes Index</h1>
  <div style="display: flex; flex-wrap: wrap; height: 100%; justify-content: center;">
  <% notes.map( (note) => { %> 
    <div style="margin: 10px; padding: 10px; min-width: 45%; border: solid 10px black; background-color: darkolivegreen">
      <h2> TITLE: <%= note.title %> </h2>
      <h2> CONTENT: <%= note.content %> </h2>
      <h3> CREATED: <%= note.created_at %> </h3>
      <a href="/notes/<%= note.id %>"> View Note </a>
    </div>
  <% }) %>
  </div>
</div>
<%- include("../partials/footer") %>